* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

a {
    text-decoration: none;
    color: #666;
}

input {
    border: 0 none;
    outline: 0 none;
}

/* 头部区域 */
#header {
    width: 100%;
    height: 51px;
    background-color: #ff841d;
}

#header .logo {
    float: left;
}

#header .logo a {
    display: block;
    width: 185px;
    height: 25px;
    margin-top: 13px;
    margin-left: 20px;
}

#header .logo a>img {
    width: 100%;
    height: 100%;
}

#header .app {
    float: right;
    padding-top: 9px;
    margin-right: 20px;
}

#header .app img {
    width: 34px;
    height: 34px;
}

/* 搜索区域 */

#search {
    width: 100%;
    height: 51px;
    background-color: #fff;
    border-bottom: 1px solid #e6e6e6;
}

#search .search {
    width: 100%;
    width: 100%;
}

#search .searchBar {
    float: left;
    width: 89%;
    height: 31px;
}

#search .searchBar input {
    width: 100%;
    height: 100%;
    margin-top: 10px;
    margin-left: 11px;
    background-color: #f1f1f1;
    border-radius: 15px;
    padding-left: 70px;
    font-size: 16px;
}

#search .searchSub {
    float: right;
    margin-top: 11px;
    margin-right: 11px;
    position: absolute;
    right: 11px;
}

#search .searchSub input {

    width: 63px;
    height: 30px;
    background-color: #ff841d;
    border-radius: 15px;
    font-size: 16px;
    line-height: 30px;
    text-align: center;
    color: #fff;
}

/* 导航区域 */
#nav {
    width: 100%;
    height: 201px;
    display: flex;
    flex-wrap: wrap;
}

#nav div {
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

}

#nav div a {
    display: block;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

#nav div a img {
    width: 50px;
    height: 50px;
}

#nav div a span {
    margin-top: 10px;
    font-size: 14px;
}

/* 商品区域 */
#products{
    width: 100%;
    background-color: #f2f2f2;
}
#products .top{
    width: 100%;
    height: 36px;
    /* background-image: linear-gradient(to right,#ffae44,#ff9205); */
    border-bottom: solid 1px #ffc881;
    background: -webkit-gradient(linear,0 0,0 100%,from(#ffaf47),to(#ff9000));
    margin-top: 5px;
    line-height: 36px;
}
#products .top span{
    font-size: 18px;
    margin-left: 10px;
    color: #fff;
    font-weight: bold;
}
#products .top img{
    width: 20px;
    height: 20px;
    float: right;
    margin-top: 8px;
    margin-right: 11px;
}